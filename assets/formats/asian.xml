<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Asian Parliamentary" schemaversion="1.1">
	<info>
		<region>Asia</region>
		<level>University</level>
		<usedat>United Asian Debating Championship</usedat>
		<desc>3 vs 3, 7-minute speeches, 4-minute replies, POIs allowed</desc>
	</info>

	<preptime length="20:00" />
	
	<resource ref="#all">
		<period ref="warning" bgcolor="#77ffcc00" />
		<period ref="overtime" bgcolor="#77ff0000" />
	</resource>

	<speechtype ref="substantive" length="7:00" firstperiod="firstmin">
		<period ref="firstmin" bgcolor="#stay" />
		<period ref="pois-allowed" bgcolor="#7700ff00" poisallowed="true" />
		<bell time="1:00" number="1" nextperiod="pois-allowed" />
		<bell time="6:00" number="1" nextperiod="warning" />
		<bell time="finish" number="2" nextperiod="overtime" />
	</speechtype>

	<speechtype ref="reply" length="4:00" firstperiod="main">
		<period ref="main" bgcolor="#stay" />
		<bell time="3:00" number="1" nextperiod="warning" />
		<bell time="finish" number="2" nextperiod="overtime" />
	</speechtype>

	<speeches>
		<speech name="Prime Minister" type="substantive" />
		<speech name="Leader of the Opposition" type="substantive" />
		<speech name="Deputy Prime Minister" type="substantive" />
		<speech name="Deputy Leader of the Opposition" type="substantive" />
		<speech name="Government Whip" type="substantive" />
		<speech name="Opposition Whip" type="substantive" />
		<speech name="Opposition Reply" type="reply" />
		<speech name="Government Reply" type="reply" />
	</speeches>
</debateformat>
