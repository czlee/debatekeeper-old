<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="British Parliamentary (5 minutes)" schemaversion="1.1">
	<info>
		<region>UK</region>
		<level>University</level>
		<usedat>Various UK IVs/Opens</usedat>
		<usedat>Welsh Novices</usedat>
		<desc>Four teams of two, 15 minutes prep, 5 minute speeches, POIs allowed</desc>
	</info>

	<preptime length="15:00" />
	
	<speechtype ref="all" length="5:00" firstperiod="initial">
		<period ref="initial" bgcolor="#stay" />
		<period ref="pois-allowed" bgcolor="#7700ff00" poisallowed="true"/>
		<period ref="warning" bgcolor="#77ffcc00" />
		<period ref="overtime" bgcolor="#77ff0000" />
		<bell time="1:00" number="1" nextperiod="pois-allowed" />
		<bell time="4:00" number="1" nextperiod="warning" />
		<bell time="finish" number="2" nextperiod="overtime" />
	</speechtype>

	<speeches>
		<speech name="Prime Minister" type="all" />
		<speech name="Leader of the Opposition" type="all" />
		<speech name="Deputy Prime Minister" type="all" />
		<speech name="Deputy Leader of the Opposition" type="all" />
		<speech name="Member for the Government" type="all" />
		<speech name="Member for the Opposition" type="all" />
		<speech name="Government Whip" type="all" />
		<speech name="Opposition Whip" type="all" />
	</speeches>
</debateformat>
