<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Australian" schemaversion="1.1">
	<info>
		<region>Australia</region>
		<level>University</level>
		<usedat>Australian Intervarsity Debating Championships (Easters)</usedat>
		<desc>3 vs 3, 8-minute speeches, no replies, no POIs</desc>
	</info>

	<preptime length="30:00" />
	
	<resource ref="#all">
		<period ref="initial" bgcolor="#stay" />
		<period ref="warning" bgcolor="#77ffcc00" />
		<period ref="overtime" bgcolor="#77ff0000" />
	</resource>

	<speechtype ref="all" length="8:00" firstperiod="initial">
		<bell time="6:00" number="1" nextperiod="warning" />
		<bell time="finish" number="2" nextperiod="overtime" />
	</speechtype>

	<speeches>
		<speech name="1st Affirmative" type="all" />
		<speech name="1st Negative" type="all" />
		<speech name="2nd Affirmative" type="all" />
		<speech name="2nd Negative" type="all" />
		<speech name="3rd Affirmative" type="all" />
		<speech name="3rd Negative" type="all" />
	</speeches>
</debateformat>
