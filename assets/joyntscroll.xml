<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Joynt Scroll">
	<info>
		<region>New Zealand</region>
		<level>University</level>
		<usedat>New Zealand Universities Prepared Debating Championships</usedat>
		<desc>3 vs 3, 10-minute speeches, 5-minute replies, POIs allowed</desc>
	</info>

	<resource ref="#all">
		<period ref="initial" desc="First minute" bgcolor="#stay" />
		<period ref="warning" desc="Warning bell rung" bgcolor="#77ffcc00" />
		<period ref="overtime" desc="Overtime" bgcolor="#77ff0000" />
	</resource>

	<speechformat ref="substantive" length="10:00" firstperiod="initial">
		<period ref="pois-allowed" name="POIs allowed" bgcolor="#7700ff00" />
   		<bell time="1:00" number="1" nextperiod="pois-allowed" sound="#default" />
		<bell time="9:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechformat>
	
	<speechformat ref="reply" length="5:00" firstperiod="initial">
		<bell time="4:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechformat>
	
	<speeches>
		<speech name="1st Affirmative" format="substantive" />
		<speech name="1st Negative" format="substantive" />
		<speech name="2nd Affirmative" format="substantive" />
		<speech name="2nd Negative" format="substantive" />
		<speech name="3rd Affirmative" format="substantive" />
		<speech name="3rd Negative" format="substantive" />
		<speech name="Negative Leader's Reply" format="reply" />
		<speech name="Affirmative Leader's Reply" format="reply" />
	</speeches>
</debateformat>
