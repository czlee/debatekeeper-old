    <CheckBoxPreference android:title="@string/vibrateMode" android:key="vibrateMode" android:summaryOn="@string/vibrateModeOnSummary" android:summaryOff="@string/vibrateModeOffSummary"/>
    
    <com.michaelnovakjr.numberpicker.NumberPickerPreference
            android:key="firstOvertimeBell"
            android:title="@string/firstOvertimeBellTitle"
            android:summary="@string/firstOvertimeBellSummary" />

    <com.michaelnovakjr.numberpicker.NumberPickerPreference
        android:key="overtimeBellPeriod"
        android:title="@string/overtimeBellPeriodTitle"
        android:summary="@string/overtimeBellPeriodSummary" />
    
</PreferenceScreen>